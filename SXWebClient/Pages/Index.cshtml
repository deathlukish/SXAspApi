@page
@model IndexModel
@{
    ViewData["Title"] = "Телефонная книга";
}
@if (Model.Error is not null)
{
    <p style="color:red">@Model.Error</p>
}
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Notes)
        {
          <tr>
            <td>@item.Id</td>
            <td>@item.FirsName</td>
            <td>@item.MiddleName</td>
            <td>@item.LastName</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item">Удалить</a>
            </td>
          </tr>
        }
    </tbody>
</table>
<p><a asp-page="./Create">Добавить запись</a></p>
